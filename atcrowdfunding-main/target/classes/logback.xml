<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%-4relative [%thread] %-5level %logger{35} - %msg %n</pattern>
		</encoder>
	</appender>

	<!-- debug < info < warn < error < fatal 
		指定级别后，会将大于等于该级别日志输出。
	-->
	<root level="debug">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>